{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: ETL Process",
            "type": "python",
            "request": "launch",
            "module": "src.covid_vax.etl",
            "args": [
                "--raw-dir",
                "data/raw",
                "--out-dir",
                "data/processed"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app/streamlit_app.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}